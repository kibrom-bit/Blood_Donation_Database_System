<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Staff</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .table-hover tbody tr:hover {
      background-color: #f5c6cb;
    }
    .btn-sm {
      padding: 5px 10px;
    }
    .search-bar {
      max-width: 300px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Manage Staff</h2>
    
    <div class="row mb-4">
      <div class="col-md-6">
        <input 
          type="text" 
          class="form-control search-bar" 
          placeholder="Search by name or role" 
          id="searchBar"
        >
      </div>
      <div class="col-md-6 text-end">
        <a href="/users/admin/register" class="btn btn-danger">Add Staff</a>
      </div>
    </div>

    <table class="table table-bordered table-hover">
      <thead class="bg-danger text-white">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% if (staffList && staffList.length > 0) { %>
          <% staffList.forEach((staff, index) => { %>
            <tr>
              <td><%= staff.staff_id %></td>
              <td><%= staff.username %></td>
              <td><%= staff.role %></td>
              <td>
                <a 
                  href="/users/admin/staff/edit/<%= staff.staff_id %>" 
                  class="btn btn-warning btn-sm"
                >Edit</a>
                <form 
                  action="/users/admin/staff/delete/<%= staff.staff_id %>" 
                  method="POST" 
                  style="display: inline;"
                  onsubmit="return confirm('Are you sure you want to delete this staff member?');"
                >
                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No staff members found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
