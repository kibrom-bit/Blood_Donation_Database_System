<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Record Donation</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .donation-form {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      padding: 30px;
      margin-top: 30px;
    }
    .form-group label {
      font-weight: bold;
    }
    .form-group input, .form-group select {
      padding-left: 40px;
    }
    .form-group input[type="text"], .form-group input[type="date"] {
      position: relative;
    }
    .form-group i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
    }
    .btn-primary {
      background-color: #d32f2f;
      border-color: #d32f2f;
      font-weight: bold;
      transition: background-color 0.3s;
    }
    .btn-primary:hover {
      background-color: #b71c1c;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Admin Dashboard</a>
          <div>
            <a class="nav-link" href="/logout">Logout</a>
          </div>
        </div>
      </nav>
  <div class="container">
    <h2 class="mt-5 text-center">Record Donor Details</h2>
    <form action="/users/save-donation" method="POST" class="donation-form" id="donationForm">
      <!-- Donor Name -->
      <div class="form-group">
        <label for="donorName">Donor's Name</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
          </div>
          <input type="text" class="form-control" id="donorName" name="donorName" required>
        </div>
      </div>

      <!-- Blood Type -->
      <div class="form-group">
        <label for="bloodType">Blood Type</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-tint"></i></span>
          </div>
          <select class="form-control" id="bloodType" name="bloodType" required>
            <option value="O+">O+</option>
            <option value="A+">A+</option>
            <option value="B+">B+</option>
            <option value="AB+">AB+</option>
            <option value="O-">O-</option>
            <option value="A-">A-</option>
            <option value="B-">B-</option>
            <option value="AB-">AB-</option>
          </select>
        </div>
      </div>

      <!-- Gender -->
      <div class="form-group">
        <label for="gender">Gender</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
          </div>
          <select class="form-control" id="gender" name="gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
          </select>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="form-group">
        <label for="contactInfo">Contact Information</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-phone-alt"></i></span>
          </div>
          <input type="text" class="form-control" id="contactInfo" name="contactInfo" required>
        </div>
      </div>

      <!-- Donation Date (Optional) -->
      <div class="form-group">
        <label for="donationDate">Donation Date</label>
        <input type="date" class="form-control" id="donationDate" name="donationDate">
      </div>

      <button type="submit" class="btn btn-primary btn-block">Record Donation</button>
    </form>
  </div>

  <!-- Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
