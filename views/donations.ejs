<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Blood Donations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
</head>
<body class="bg-light">
  <div class="container text-center mt-5">
    <h1 class="text-danger"><i class="bi bi-droplet-fill"></i> Blood Donation System</h1>
    <h2 class="text-dark">Available Blood Donations</h2>
    <div class="list-group mt-4">
      <% if (donations.length > 0) { %>
        <% donations.forEach(donation => { %>
          <div class="list-group-item list-group-item-action">
            <h5><i class="bi bi-person-circle"></i> Donor: <%= donation.donor_name %></h5>
            <p>Blood Group: <%= donation.blood_group %></p>
            <p>Gender: <%= donation.gender %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-muted">No blood donations available at the moment.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
